# =========================================
# 基础环境配置
# =========================================
NODE_ENV=development
PYTHON_ENV=development

# =========================================
# 端口配置
# =========================================
FRONTEND_PORT=6060
BACKEND_PORT=8080
GRADIO_PORT=7070
LANGMANUS_WEB_PORT=3000
LANGMANUS_API_PORT=8000
DAILY_HOT_UI_PORT=6699
DAILY_HOT_API_PORT=6688
MD_EDITOR_PORT=9000

# =========================================
# 数据库配置
# =========================================
# 使用组件方式（推荐）
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_NAME=genflow_dev
# 或使用完整URL
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost/genflow_dev

# =========================================
# 认证与安全
# =========================================
# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here  # 生产环境必须修改
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1小时

# 管理员账号
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your_secure_password  # 生产环境必须修改

# =========================================
# API集成
# =========================================
# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key_here

# LangManus
LANGMANUS_API_URL=http://localhost:8000
LANGMANUS_API_KEY=your_langmanus_api_key_here

# DailyHot
DAILY_HOT_API_URL=http://localhost:6688
DAILY_HOT_CACHE_TIME=60  # 缓存时间（分钟）
DAILY_HOT_PROXY_HOST=  # 代理服务器地址（可选）
DAILY_HOT_PROXY_PORT=  # 代理服务器端口（可选）

# =========================================
# 注意事项
# =========================================
# 1. 生产环境必须修改所有密码和密钥
# 2. 确保数据库配置正确（用户名、密码、主机）
# 3. 所有 API 密钥在生产环境中必须更改
# 4. 建议在生产环境中使用更长的 JWT 过期时间