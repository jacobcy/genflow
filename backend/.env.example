# =========================================
# Backend 特定配置
# =========================================

# API 配置
API_V1_STR=/api/v1
PROJECT_NAME=GenFlow Backend
VERSION=1.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8080
WORKERS=4
RELOAD=true

# 数据库配置
# 如果未设置，将使用全局配置
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_NAME=genflow_dev
# DATABASE_URL=postgresql://your_db_user:your_db_password@localhost/genflow_dev

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 安全配置
SECRET_KEY=your_backend_secret_key_here  # 用于加密会话等
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:6060"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry 配置（可选）
SENTRY_DSN=

# 性能监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 缓存配置
CACHE_EXPIRE_MINUTES=15

# 文件上传配置
MAX_UPLOAD_SIZE=5242880  # 5MB
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf"]
UPLOAD_DIR=uploads

# 注意：此文件仅包含后端特定的配置
# 全局配置请参考根目录的 .env.example 