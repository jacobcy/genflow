{
    "id": "csdn",
    "name": "CSDN",
    "type": "tech_community",
    "url": "https://www.csdn.net",
    "description": "中国专业IT技术社区，以程序员和IT从业者为主要用户，偏好实用代码、技术细节和完整实现方案",
    "target_audience": "20-45岁的技术人员，包括开发者、工程师、学生等IT从业者，期望获得可直接应用的代码和解决方案",
    "content_types": [
        "code_implementation",
        "technical_tutorial",
        "problem_solution",
        "source_code_analysis",
        "performance_optimization"
    ],
    "primary_language": "zh-CN",
    "content_rules": {
        "min_length": 800,
        "max_length": 15000,
        "allowed_formats": [
            "text",
            "image",
            "code",
            "table",
            "list"
        ],
        "forbidden_words": [
            "敏感词1",
            "敏感词2",
            "敏感词3"
        ],
        "required_sections": [
            "引言",
            "正文",
            "总结"
        ]
    },
    "style_rules": {
        "tone": "instructional",
        "formality": 3,
        "emotion": false,
        "code_block": true,
        "emoji": false,
        "image_text_ratio": 0.15,
        "max_image_count": 40,
        "min_paragraph_length": 40,
        "max_paragraph_length": 300,
        "paragraph_count_range": [
            8,
            40
        ],
        "section_count_range": [
            4,
            15
        ],
        "title_length_range": [
            20,
            80
        ],
        "keyword_density": 0.015,
        "heading_required": true,
        "tag_count_range": [
            3,
            10
        ]
    },
    "style_guide": {
        "tone": "instructional",
        "format": "技术博客",
        "target_audience": "20-45岁的技术人员，包括开发者、工程师、学生等IT从业者或爱好者",
        "writing_style": "实用技术",
        "language_level": "professional",
        "content_approach": "问题解决导向",
        "recommended_patterns": [
            "开头说明文章解决的问题或实现的功能",
            "使用清晰的标题和小标题组织内容",
            "代码与解释相结合，详细注释关键代码",
            "提供完整可执行的代码示例",
            "使用步骤编号和列表增强可读性",
            "总结经验教训和最佳实践"
        ],
        "examples": [
            "详解Python异步编程：从原理到实践（附完整代码）",
            "10分钟掌握Python协程：asyncio库使用详解与示例",
            "解决Python异步编程中的常见问题与性能优化技巧"
        ]
    },
    "seo_requirements": {
        "title_length": 100,
        "description_length": 200,
        "keyword_count": 5,
        "meta_requirements": {
            "title_format": "{主题}：{副标题} - CSDN博客",
            "description_format": "本文详细介绍了{主题}的{核心技术}，包含{关键词}的实现方法和代码示例。"
        }
    },
    "publish_settings": {
        "auto_publish": false,
        "review_required": true,
        "publish_time": "immediate"
    }
}