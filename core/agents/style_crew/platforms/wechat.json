{
    "id": "wechat",
    "name": "微信公众号",
    "type": "official_account",
    "url": "https://mp.weixin.qq.com",
    "description": "中国最大的内容分发平台之一，用户偏好有深度、有价值、可信赖的原创内容",
    "target_audience": "25-45岁的中高收入人群，对专业内容、深度阅读和高质量信息有需求",
    "content_types": [
        "thought_leadership",
        "analysis",
        "opinion",
        "knowledge",
        "insight"
    ],
    "primary_language": "zh-CN",
    "content_rules": {
        "min_length": 1000,
        "max_length": 20000,
        "allowed_formats": [
            "text",
            "image",
            "list",
            "blockquote",
            "heading"
        ],
        "forbidden_words": [
            "敏感词1",
            "敏感词2",
            "敏感词3"
        ],
        "required_sections": [
            "引言",
            "正文",
            "结论",
            "作者简介"
        ]
    },
    "style_rules": {
        "tone": "thoughtful",
        "formality": 4,
        "emotion": false,
        "code_block": true,
        "emoji": false,
        "image_text_ratio": 0.15,
        "max_image_count": 20,
        "min_paragraph_length": 50,
        "max_paragraph_length": 350,
        "paragraph_count_range": [
            10,
            50
        ],
        "section_count_range": [
            4,
            15
        ],
        "title_length_range": [
            15,
            50
        ],
        "keyword_density": 0.01,
        "heading_required": true,
        "tag_count_range": [
            3,
            8
        ]
    },
    "style_guide": {
        "tone": "thoughtful",
        "format": "深度文章",
        "target_audience": "25-45岁的中高收入人群，对专业内容、深度阅读和高质量信息有需求",
        "writing_style": "深度思考",
        "language_level": "advanced",
        "content_approach": "价值传递",
        "recommended_patterns": [
            "开篇设置引人入胜的场景或问题",
            "层层递进的论述，观点清晰",
            "引用权威数据或研究支持论点",
            "适当使用类比和故事增强可读性",
            "段落之间有良好的过渡衔接",
            "结尾提供启发或行动建议"
        ],
        "examples": [
            "2024年Python异步编程趋势报告：这五个认知将重构你的开发思维",
            "十年架构师首次揭秘：异步编程如何影响千万级并发系统设计",
            "从Go到Rust：为什么说异步编程正在经历第三次范式革命？",
            "阿里云资深专家万字长文：异步编程的七个认知陷阱与破局之道",
            "独家解读｜异步编程将死？2025年编程范式演进预测白皮书"
        ]
    },
    "seo_requirements": {
        "title_length": 64,
        "description_length": 200,
        "keyword_count": 5,
        "meta_requirements": {
            "title_format": "{核心观点}：{主题}的{深度解析}",
            "description_format": "本文深度剖析{主题}，从{角度1}、{角度2}等多维度进行思考..."
        }
    },
    "publish_settings": {
        "auto_publish": false,
        "review_required": true,
        "publish_time": "scheduled"
    }
}
