{
  "id": "weibo",
  "name": "微博",
  "url": "https://weibo.com",
  "description": "中国最大的微博客服务",
  "category": "social_media",
  "primary_language": "zh-CN",
  "supported_languages": ["zh-CN"],
  "min_length": 1,
  "max_length": 2000,
  "max_title_length": 0,
  "max_image_count": 9,
  "forbidden_words": ["敏感词", "违规内容", "政治"],
  "constraints": {
    "min_length": 1,
    "max_length": 2000,
    "max_title_length": 0,
    "max_image_count": 9,
    "max_video_count": 1,
    "forbidden_words": ["敏感词", "违规内容", "政治"],
    "required_elements": ["content"],
    "allowed_formats": ["text", "image", "video"],
    "allowed_media_types": ["jpg", "png", "gif", "mp4"],
    "code_block_support": false,
    "math_formula_support": false,
    "table_support": false,
    "emoji_support": true
  },
  "technical": {
    "api_version": "v2",
    "rate_limits": {
      "posts_per_hour": 20
    },
    "max_request_size": 5242880,
    "supported_file_types": ["jpg", "png", "gif", "mp4"],
    "auth_required": true,
    "https_required": true
  },
  "review_required": false,
  "auto_review_enabled": false,
  "publish_settings": {
    "default_publish_time": "immediate",
    "scheduling_supported": true,
    "batch_publish_supported": false
  }
}
