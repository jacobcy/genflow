        "code_block": false,
        "emoji": true,
        "image_text_ratio": 0.3,
        "max_image_count": 9,
        "min_paragraph_length": 15,
        "max_paragraph_length": 150,
        "paragraph_count_range": [
            3,
            15
        ],
        "section_count_range": [
            1,
            5
        ],
        "title_length_range": [
            10,
            35
